<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center" id="top_bar">
			<h1>EAT DA BURGER!</h1>
		</div>
		<div class="col-xs-6 text-center" class="task">
			<div class="row">
				{{#each burger_data}}
					{{#unless this.devoured}}
					<div class="col-xs-9 text-center">
							<pre>{{this.id}}. {{this.burger_name}}</pre>
					</div>
					<div class="col-xs-3 text-center">
						<form class="button-size" action="burger/update?_method=PUT" method="POST">
							<input type="submit" name="burger_id" value={{this.id}} type="text">
							<br>
							<button type="submit" class="btn btn-default" name="button">DEVOUR IT!</button>
						</form>
					</div>
					<div class="">
						{{/unless}}
						{{/each}}
					</div>
			</div>
		</div>
	</div>

</div>
